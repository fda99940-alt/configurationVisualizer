{
  "title": "Platform Deployment Config",
  "type": "object",
  "required": ["platform", "environments", "global"],
  "properties": {
    "platform": {
      "type": "string",
      "enum": ["payments", "analytics", "messaging"]
    },
    "global": {
      "type": "object",
      "required": ["owner", "featureFlags", "network"],
      "properties": {
        "owner": {
          "type": "string"
        },
        "featureFlags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "network": {
          "type": "object",
          "required": ["retryLimit", "timeoutMs", "tls"],
          "properties": {
            "retryLimit": {
              "type": "integer",
              "minimum": 0,
              "maximum": 10
            },
            "timeoutMs": {
              "type": "integer",
              "minimum": 100,
              "maximum": 120000
            },
            "tls": {
              "type": "object",
              "required": ["enabled", "minVersion"],
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "minVersion": {
                  "type": "string",
                  "enum": ["1.2", "1.3"]
                }
              }
            }
          }
        }
      }
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "replicas", "services"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["dev", "staging", "prod"]
          },
          "replicas": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100
          },
          "services": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["serviceName", "image", "ports", "resources"],
              "properties": {
                "serviceName": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                },
                "ports": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  }
                },
                "resources": {
                  "type": "object",
                  "required": ["cpu", "memoryMb"],
                  "properties": {
                    "cpu": {
                      "type": "number",
                      "minimum": 0.1,
                      "maximum": 32
                    },
                    "memoryMb": {
                      "type": "integer",
                      "minimum": 128,
                      "maximum": 262144
                    }
                  }
                },
                "probes": {
                  "type": "object",
                  "properties": {
                    "livenessPath": {
                      "type": "string"
                    },
                    "readinessPath": {
                      "type": "string"
                    },
                    "initialDelaySeconds": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 600
                    }
                  }
                }
              }
            }
          },
          "alerts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["channel", "severity"],
              "properties": {
                "channel": {
                  "type": "string",
                  "enum": ["email", "slack", "pagerduty"]
                },
                "severity": {
                  "type": "string",
                  "enum": ["low", "medium", "high", "critical"]
                },
                "enabled": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "audit": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "retentionDays": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3650
        },
        "sinks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["s3", "datadog", "elasticsearch"]
          }
        }
      }
    }
  }
}
